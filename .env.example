# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
ADMIN_ID=your_admin_telegram_id_here

# Database Configuration (Railway will provide PostgreSQL URL)
# For development: DATABASE_URL=sqlite:///./tg_bot.db
# For production: DATABASE_URL will be auto-set by Railway PostgreSQL service
DATABASE_URL=postgresql://user:password@localhost:5432/tg_bot

# Webhook Configuration
WEBHOOK_SECRET=your_secure_webhook_secret_here_change_this_in_production
WEBHOOK_URL=https://your-railway-app.up.railway.app/webhook/your_webhook_secret

# Environment
ENVIRONMENT=production
